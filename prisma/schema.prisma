generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//////////////////////
// ENUMS
//////////////////////

enum UserRole {
  ADMIN
  CLIENT
}

enum TemplateStatus {
  DRAFT
  ACTIVE
  DISABLED
}

enum ImageType {
  SAMPLE
  GENERATED
}

enum ImageStatus {
  ACTIVE
  HIDDEN
  DELETED
}

enum JobStatus {
  QUEUED
  RUNNING
  SUCCESS
  FAILED
}

enum JobType {
  SAMPLE_BATCH
  CLIENT_GENERATION
}

//////////////////////
// MODELS
//////////////////////

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String?
  role     UserRole @default(CLIENT)

  images ImageAsset[]
  jobs   GenerationJob[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id          String         @id @default(uuid())
  name        String
  description String?
  status      TemplateStatus @default(DRAFT)

  provider  String
  modelName String

  prompt         String
  negativePrompt String?

  width  Int
  height Int

  sampleCount Int @default(4)

  configJson Json?
  tags       String[]

  images ImageAsset[]
  jobs   GenerationJob[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ImageAsset {
  id     String      @id @default(uuid())
  type   ImageType
  status ImageStatus @default(ACTIVE)

  templateId String
  template   Template @relation(fields: [templateId], references: [id])

  sourceSampleId String?
  sourceSample   ImageAsset?  @relation("SampleToGenerated", fields: [sourceSampleId], references: [id])
  generated      ImageAsset[] @relation("SampleToGenerated")

  jobsAsSample GenerationJob[]

  createdById String?
  createdBy   User?   @relation(fields: [createdById], references: [id])

  provider  String
  modelName String

  promptUsed         String
  negativePromptUsed String?

  seed         String?
  settingsJson Json?

  gcsPath       String
  thumbnailPath String?

  createdAt DateTime @default(now())
}

model GenerationJob {
  id String @id @default(uuid())

  jobType JobType
  status  JobStatus @default(QUEUED)

  templateId String
  template   Template @relation(fields: [templateId], references: [id])

  sampleId String?
  sample   ImageAsset? @relation(fields: [sampleId], references: [id])

  requestedById String?
  requestedBy   User?   @relation(fields: [requestedById], references: [id])

  payloadJson   Json
  resultImageId String?
  error         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
